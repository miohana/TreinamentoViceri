@model IEnumerable<Fatec.Treinamento.Model.Curso>
@{
    ViewBag.Title = "Cursos";
}
<h2>Cursos</h2>
<p>
    <a href="@Url.Action("Criar")" class="btn btn-primary">Novo curso</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classificacao)
        </th>
<th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classificacao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
            </td>
        </tr>
    }
</table>
